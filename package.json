{
  "name": "docen-edge",
  "version": "0.0.0",
  "description": "Programmatically and command-line implementation of document formatting, powered by Demo Macro.",
  "private": true,
  "scripts": {
    "build": "pnpm -r prepack",
    "check": "biome check . --apply-unsafe && biome format . --write",
    "format": "prettier --write --list-different . --ignore-path .gitignore",
    "edge": "pnpm -r exec bump v",
    "release": "pnpm -r exec bump v -r patch",
    "public": "pnpm -r exec bump p",
    "postinstall": "githooks install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DemoMacro/docen.git"
  },
  "keywords": [
    "pandoc",
    "mammoth"
  ],
  "author": {
    "name": "Demo Macro",
    "email": "abc@imst.xyz",
    "url": "https://imst.xyz/"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DemoMacro/docen/issues"
  },
  "homepage": "https://github.com/DemoMacro/docen#readme",
  "devDependencies": {
    "@funish/githooks": "edge",
    "@funish/githooks-config": "edge",
    "@funish/lint": "edge",
    "@types/node": "20.6.0",
    "@vercel/ncc": "0.36.1",
    "pkg": "5.8.1",
    "prettier": "3.0.2",
    "@biomejs/biome": "1.0.0",
    "unbuild": "2.0.0"
  }
}
